<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.analogclock.AnalogClockView
        android:id="@+id/analogClockView"
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/next_preview_button"
        app:layout_constraintHeight_percent=".40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.example.analogclock.AnalogClockView
        android:id="@+id/analogClockView2"
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".40"
        app:layout_constraintStart_toEndOf="@+id/next_preview_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/next_preview_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_preview_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <Spinner
        android:id="@+id/time_zone_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/next_preview_button"
        app:layout_constraintEnd_toEndOf="@+id/analogClockView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/analogClockView2"
        app:layout_constraintTop_toBottomOf="@+id/choose_time_zone_text_view"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/system_time_zone_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="@string/system_time_zone"
        android:textAlignment="center"
        android:background="#858585"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/analogClockView"
        app:layout_constraintStart_toStartOf="@+id/analogClockView"
        app:layout_constraintTop_toBottomOf="@+id/analogClockView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/choose_time_zone_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:text="@string/choose_time_zone"
        android:textAlignment="center"
        android:background="@color/gray"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/analogClockView2"
        app:layout_constraintStart_toStartOf="@+id/analogClockView2"
        app:layout_constraintTop_toBottomOf="@+id/analogClockView2" />


</androidx.constraintlayout.widget.ConstraintLayout>